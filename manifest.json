{
    "manifest_version": 3,
    "name": "Blur My Screen",
    "version": "1.0",
    "description": "Blur your screen instantly with a keypress (Ctrl+B).",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "style.css"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start"
        }
    ],
    "icons": {
        "128": "/assets/icons/blur-light.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "/assets/icons/blur-light.png"
        }
    },
    "web_accessible_resources": [
        {
            "resources": [
                "popup.html",
                "welcome/welcome.html",
                "assets/icons/blur-small.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}